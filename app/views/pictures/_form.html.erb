<%= form_with(model: picture, local: true, url: choose_new_or_edit ) do |form| %>
  <% if picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
        <% picture.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p class="mb-1"><%= form.label :画像： %></p>
    <%= image_tag(picture.image.url) if picture.image && picture.image.url %>
    <p class="mb-5 mt-3"><%= form.file_field :image %></p>
    <p><%= form.hidden_field :image_cache %></p>
    
    <p class="mb-1"><%= form.label :コメント %></p>
    <p><%= form.text_field :content, class:"w-50" %></p>

    
  </div>

  <div class="actions">
    <%= form.submit class:"mt-4 mb-2 btn btn-light" %>
  </div>
<% end %>
