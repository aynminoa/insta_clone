<div class="wrapper">
  <h1>確認画面</h1>
  <%= form_with(model: @picture, url: pictures_path, local: true) do |form| %>
  <p>
    <strong>コメント:</strong>
    <%= form.hidden_field :content %>
    <%= @picture.content %>
  </p>
  <p><strong>画像:</strong></p>
  <p><%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %></p>
    <%= form.hidden_field :image_cache %>
  </p>
  <%= form.submit "投稿する", class:"btn btn-light mb-4 mt-3" %>
  <% end %>
  
  <%= form_with(model:@picture, url:new_picture_path, local:true, method:"get") do |form| %>
    <%= form.hidden_field :image_cache %>
    <%= link_to '投稿一覧へ戻る', pictures_path, class:"btn btn-light" %>
  <% end %>
</div>