<div class="wrapper">
  <h1>ユーザー登録情報の編集</h1>
  
  <%= form_with(model: @user, local: true) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
  
        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <p class="mb-1"><%= form.label :name %></p>
      <p><%= form.text_field :name, class:"w-50" %></p>
  
      <p class="mb-1"><%= form.label :email %></p>
      <p><%= form.text_field :email, class:"w-50" %></p>
  
      <p class="mb-1"><%= form.label :password %></p>
      <p><%= form.password_field :password, class:"w-50" %></p>
  
      <p class="mb-1"><%= form.label :password_confirmation %></p>
      <p><%= form.password_field :password_confirmation, class:"w-50" %></p>
      
      <p class="mb-1"><%= form.label :プロフィール画像： %></p>
      <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
      <p class="mt-3"><%= form.file_field :image %></p>
    </div>
  
    <div class="actions">
      <%= form.submit class:"mt-4 mb-2 btn btn-light" %>
    </div>
  <% end %>
  
  <p><%= link_to '前のページに戻る', user_path, class:"btn btn-light" %></p>
</div>


