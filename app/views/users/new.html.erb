<div class="wrapper">
  <h1>Sign up</h1>
  
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_with(model: @user, local: true) do |f| %>  
    <p class="mb-1"><%= f.label :name %></p>
    <p><%= f.text_field :name, class:"w-50" %></p>
    
    <p class="mb-1"><%= f.label :email %></p>
    <p><%= f.email_field :email, class:"w-50" %></p>
    
    <p class="mb-1"><%= f.label :password %></p>
    <p><%= f.password_field :password, class:"w-50" %></p>
    
    <p class="mb-1"><%= f.label :password_confirmation %></p>
    <p><%= f.password_field :password_confirmation, class:"w-50" %></p>

    <p class="mb-1"><%= f.label :プロフィール画像 %></p>
    <p><%= f.file_field :image %></p>
    <p class="mt-5"><%= f.submit "アカウント登録", class:"btn btn-light" %></p>
  <% end %>
</div>